generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id        String   @id @default(uuid())
  name      String
  description String?
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())

  @@index([latitude, longitude]) // âœ… spatial index
}
